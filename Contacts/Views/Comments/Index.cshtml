@model IEnumerable<Contacts.Models.CommentModel>

@{
    ViewBag.Title = "Отзывы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Отзывы:</h2>
<br/>

<table class="table">
    <tr>
        <th>
            Имя:
        </th>
        <th>
            Дата:
        </th>
        <th>
            Текст:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)<br />
            </td>
            <td>
                @item.DateComment.ToString("dd-MM-yyyy HH:mm")<br />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Добавить отзыв", "AddComment", "Comments")
