@model IEnumerable<Contacts.Models.HolidayModel>

@{
    ViewBag.Test = "Сегодня, ";
    ViewBag.TestMore = "Поздравляем с праздником!!!";
    ViewBag.Title = "Holiday";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">

    @if (Model.Any())
    {
        foreach (var s in Model)
        {
            <h2>@ViewBag.Test</h2>
            <h1>@s.Name</h1>
            <br />
            <h2>@ViewBag.TestMore</h2>
        }
    }
    else
    {
        <h1>Сегодня праздников нет!</h1>
    }

</div>

